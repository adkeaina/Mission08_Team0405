@{
    ViewData["Title"] = "Quadrants View";
}

<h2>Task Quadrants</h2>

<div class="container">
    <div class="row">
        <!-- Quadrant 1 -->
        <div class="col-md-6">
            <h3>Quadrant 1: Important / Urgent</h3>
            <ul>
                @foreach (var task in ViewBag.Quadrant1)
                {
                    <li>
                        @task.TaskName
                        <a asp-action="EditTask" asp-route-taskId="@task.GoalId">Edit</a> |
                        <a asp-action="DeleteTask" asp-route-taskId="@task.GoalId">Delete</a> |
                        <a asp-action="MarkCompleted" asp-route-taskId="@task.GoalId">Complete</a>
                    </li>
                }
            </ul>
        </div>

        <!-- Quadrant 2 -->
        <div class="col-md-6">
            <h3>Quadrant 2: Important / Not Urgent</h3>
